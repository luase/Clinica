@model IEnumerable<Clinica.Web.Data.Entities.AppointmentDetailTemp>

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<p>
    <a asp-action="AddPacient" class="btn btn-success">Add Pacient</a> 
    <a asp-action="ConfirmOrder" class="btn btn-primary">Confirm Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pacient.Name)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacient.Name)
                </td>
                <td>
                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

